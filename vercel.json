{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "bun install && cd comics-editor && bun install",
  "buildCommand": "bunx convex codegen && cd comics-editor && bun run build",
  "outputDirectory": "comics-editor/.next",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/cdn/:versionId/:filename",
      "destination": "https://giant-dodo-784.convex.site/am/file/v/:versionId/:filename"
    }
  ],
  "headers": [
    {
      "source": "/cdn/:path*",
      "headers": [
        {
          "key": "CDN-Cache-Control",
          "value": "max-age=31536000"
        }
      ]
    }
  ]
}
